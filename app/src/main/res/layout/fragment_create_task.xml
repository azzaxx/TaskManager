<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/fragment_create_task_image_add_timer"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_alarm_add_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_chat_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_location"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_add_location_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_today_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_attach"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_attach_file_white_48px" />
    </LinearLayout>
</RelativeLayout>