<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="12dp"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#236467">

        <ImageView
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vector_alarm_add_white_48px"
            android:id="@+id/fragment_create_task_image_add_timer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp" />

        <ImageView
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vector_chat_white_48px"
            android:id="@+id/fragment_create_task_image_add_chat"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/fragment_create_task_image_add_timer"
            android:layout_toEndOf="@+id/fragment_create_task_image_add_timer" />

        <ImageView
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vector_add_location_white_48px"
            android:id="@+id/fragment_create_task_image_add_location"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/fragment_create_task_image_add_chat"
            android:layout_toEndOf="@+id/fragment_create_task_image_add_chat" />

        <ImageView
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_vector_today_white_48px"
            android:id="@+id/fragment_create_task_image_add_date"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/fragment_create_task_image_add_location"
            android:layout_toEndOf="@+id/fragment_create_task_image_add_location" />

        <ImageView
            android:src="@drawable/ic_vector_attach_file_white_48px"
            android:id="@+id/fragment_create_task_image_add_attach"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/fragment_create_task_image_add_date"
            android:layout_toEndOf="@+id/fragment_create_task_image_add_date" />
    </RelativeLayout>
</RelativeLayout>