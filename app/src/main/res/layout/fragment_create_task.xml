<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_create_task_rl_top"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <Spinner
            android:id="@+id/fragment_create_task_spinner_select_letter"
            android:layout_width="72dp"
            android:layout_height="wrap_content">

        </Spinner>

    </RelativeLayout>

    <EditText
        android:id="@+id/fragment_create_task_edit_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_create_task_rl_top"
        android:gravity="center"
        android:hint="Task header"
        android:minHeight="48dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/fragment_create_task_edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_create_task_edit_text_header"
        android:gravity="center"
        android:hint="Task description"
        android:minHeight="72dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/fragment_create_task_image_add_timer"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_alarm_add_amber_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_chat_amber_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_location"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_add_location_amber_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_today_amber_white_48px" />

        <ImageView
            android:id="@+id/fragment_create_task_image_add_attach"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_vector_attach_file_amber_white_48px" />
    </LinearLayout>
</RelativeLayout>